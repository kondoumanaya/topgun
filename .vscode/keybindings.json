// このファイルはVSCodeのキーバインディングを定義する。
// 各タスクに対するショートカットキーを設定している。

[
  // 依存関係管理
  {
    "key": "cmd+shift+i",
    "command": "workbench.action.tasks.runTask",
    "args": "Install Dependencies",
    "when": "!terminalFocus"
  },

  // Bot関連

  // Docker関連
  {
    "key": "cmd+shift+d",
    "command": "workbench.action.tasks.runTask",
    "args": "Docker: Build and Run",
    "when": "!terminalFocus"
  },

  // 環境管理
  {
    "key": "cmd+shift+c",
    "command": "workbench.action.tasks.runTask",
    "args": "Clean: Remove Environment",
    "when": "!terminalFocus"
  },

  // タスク一覧を表示
  {
    "key": "cmd+shift+t",
    "command": "workbench.action.tasks.runTask"
  }
]
